from util.snake.configs import get_snax_mac_config

config = get_snax_mac_config()

config["snaxoptflags"] = ",".join(
    [
        "preprocess",
        "dispatch-kernels",
        "set-memory-space",
        "set-memory-layout",
        "realize-memref-casts",
        "reuse-memref-allocs",
        "insert-sync-barrier",
        "dispatch-regions",
        "snax-copy-to-dma",
        "memref-to-snax",
        "snax-to-func",
        "clear-memory-space",
        "postprocess",
    ]
)


module snax_rules:
    snakefile:
        "../../util/snake/snax.smk"
    config:
        config


use rule * from snax_rules as snax_*


# Rules
rule all:
    input:
        "func_aggregated.json",


rule compile_snax_binary:
    input:
        "func.o",
        "main.o",
    output:
        "func.x",
    shell:
        "{config[ld]} {config[ldflags]} {input} -o {output}"
